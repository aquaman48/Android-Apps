<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgCow"
        android:layout_width="275dp"
        android:layout_height="168dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/cow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cows" />

    <Button
        android:id="@+id/btnCow"
        android:layout_width="277dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/btnCow"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCow" />

    <ImageView
        android:id="@+id/imgPig"
        android:layout_width="274dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/pig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCow"
        app:srcCompat="@drawable/pigs" />

    <Button
        android:id="@+id/btnPig"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="@string/btnPig"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPig" />
</androidx.constraintlayout.widget.ConstraintLayout>